<style>
  #space { display:inline; font-size:1.2em; }

  #tt_page_identifier .touchscreenTextInput {
    top: 46px;
  }
  .options {
    display:none;
  }

</style>

<script>
  var tt_cancel_destination = "/clinic"; // /properties/"
</script>

<form method='post' action='/properties/set_htn_bp_thresholds'>
  <input type='text' id='systolic'
         name='systolic'
         helpText='Set systolic blood pressure '
         field_type="number"
         min = 10
         max = 250
         tt_pageStyleClass = "Numeric NumbersOnly"/>

  <input type='text' id='diastolic'
         name='diastolic'
         helpText='Set diastolic blood pressure '
         field_type="number"
         min = 10
         max = 250
         tt_pageStyleClass = "Numeric NumbersOnly"/>

  <% unless params[:view_configuration].blank? %>
    <%= hidden_field_tag "view_configuration", params[:view_configuration] %>
  <% end %>
</form>
