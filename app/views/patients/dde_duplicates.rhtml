<html>
  <head>
    <%= javascript_include_tag "prototype" %>
    <%= javascript_include_tag 'jquery' %>
    <!--<link rel="stylesheet" type="text/css" href="/touchscreentoolkit/lib/stylesheets/touch-fancy.css"></link>-->
    <script src="/touchscreentoolkit/lib/javascripts/standard.js" type="text/javascript"></script>

    <style>
      .messageBar {
        left: 250px;
        width: 450px;
        position: absolute;
        top: 100px;
        font-size: 2em;
        text-align: center;
        background-color: tomato;
        padding: 10px;
        z-index: 999;
        border: 5px outset tomato;
        display: none;
        border-radius: 15px;
      }

      #second_patient_div {
        width:49%;
        margin-left:55%;
      }

      #primary_patient_div {
        float:left;
        width:45%;
        margin-left:1%;
      }

      .find_buttons {
        height:30px;
        width: 100px;
        font-size:10px;
      }

      table{
        font-size:20px;
        /*padding-left:10px;*/
      }

      #left_div {
        float: left;
        width: 43%;
        border-style:solid;
        border-width:1px;
        height: 75%;
        overflow: auto;
        margin-top: 2%;
        margin-left: 0.5%;
      }

      #right_div {
        width: 44%;
        border-style:solid;
        border-width:1px;
        height: 75%;
        overflow: auto;
        margin-top: 2%;
        margin-left: 54%;
      }

      #center_div {
        float: left;
        width: 8%;
        height: 77%;
        overflow: auto;
      }

      #popUpBox{
        position: absolute;
        top: 84px;
        left: 420px;
        border: solid 1px #000000;
        background-color:MediumTurquoise;
        visibility: hidden;
        font-size: 25;
        z-index: 600;
        width:413px;
        -moz-user-select:none
      }

      .find_buttons{
        border-radius: 7px;
        background-color: #6495ED;
        border-bottom: 1px outset black;
        border-top: 1px outset black;
        color: white;
        padding: 9px 16px 16px 19px;
        text-align: center;
        text-decoration: none;
        cursor: pointer;
        bottom: 0px;
        font-weight: bold;
        font-size: 14pt;
      }

      #merge{
        border-radius: 7px;
        background-color: #6495ED;
        border-bottom: 1px outset black;
        color: white;
        padding: 10px 10px 10px 10px;
        text-align: center;
        text-decoration: none;
        cursor: pointer;
        font-weight: bold;
        font-size: 14pt;
        margin-top: 12%;
        position: absolute;
        left: 45%;
      }
      input{
        color:#00f;
        padding: 10px;
        border: 2px solid #DDDDDD;
        width: 200px;
      }

      #disabled_button_left, #disabled_button_right{
        border-radius: 7px;
        background-color: #BEBEBE;
        border-bottom: 1px outset black;
        border-top: 1px outset black;
        color: white;
        padding: 9px 16px 16px 19px;
        text-align: center;
        text-decoration: none;
        cursor:no-drop;
        bottom: 0px;
        font-weight: bold;
        font-size: 14pt;
        margin-left: 4%;
      }
      div{
        -moz-user-select: none;
      }
      #primary_button{
        margin-left: 4%;
      }
      #secondary_button{
        margin-left: 4%;
      }

      .div-info{
        position: relative;
        font-weight: bolder;
        left: 40%;

      }
    </style>

    <script type="text/javascript">
      function changeDefaultSettings(){
        __$("finishButton").innerHTML = "<span>Merge Patients</span>";
        __$("finishButton").onmousedown = function(){
          alert("Merging coming soon")
        }
      }

      window.onload = function(){
        changeDefaultSettings();
      }
    </script>

  </head>

  <br/>

  <div id='left_div'>
    <span class="div-info">Local Patients</span>
  </div>

  <!--<div id='center_div'>-->
  <a id='merge' style = 'width: 89px;' onmousedown='mergePatients()'>&nbsp;<span><<</span></a>
  <!--</div>-->

  <div id='right_div'>
    <span class="div-info">Remote Patients</span>
  </div>



  <div id='popUpBox'>
  </div>


  <div id="keypad">
    <span class="keypad">
    </span>
  </div>


  <div id="keypad">
    <span class="keypad">
    </span>
  </div>

</html>

